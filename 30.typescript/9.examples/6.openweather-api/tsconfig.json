{
    "compilerOptions": {
        "module": "ESNext", // ESM 모듈 지원
        "target": "ES2020", // 최신 JavaScript 버전으로 컴파일
        "strict": true, // 엄격한 타입 검사
        "esModuleInterop": true, // ESM 호환성 지원
        "moduleResolution": "Node", // Node.js 모듈 해석 방식
        "outDir": "./dist", // 컴파일된 파일 출력 경로
        "rootDir": "./src" // 소스 파일 루트 경로
    },
    "include": ["src/**/*"], // 포함할 파일
    "exclude": ["node_modules"] // 제외할 파일
}
