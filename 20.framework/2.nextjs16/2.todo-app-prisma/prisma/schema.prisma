// prisma/schema.prisma
generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Todo {
  id        String   @id @default(cuid())
  text      String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
}
