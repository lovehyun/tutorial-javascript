@echo off
echo Deleting all node_modules folders, excluding .git directories...

:: 현재 디렉토리 및 하위 디렉토리에서 node_modules 삭제, .git 제외
for /d /r %%d in (node_modules) do (
    :: .git 디렉토리 여부 확인
    echo %%d | findstr /i "\\.git\\" >nul
    if errorlevel 1 (
        echo Deleting %%d
        rmdir /s /q "%%d"
    ) else (
        echo Skipping %%d as it is inside a .git directory
    )
)

echo Cleanup completed.
pause
